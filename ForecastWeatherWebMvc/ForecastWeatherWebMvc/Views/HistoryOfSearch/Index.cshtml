@using ForecastWeatherApp.EntityContext

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@using (Html.BeginForm("SeeHistory", "HistoryOfSearch"))
{
    <div class="form-horizontal">
        <div class="form-group">
            <label class="control-label col-sm-2">Choose city</label>
            <select name="city" class="form-control">
                @{
                    var context = new WeatherContext();
                    foreach (var p in context.Cities)
                    {
                        <option value=@p.Name>@p.Name</option>
                    }
                }
            </select>
        </div>


        <div class="col-md-offset-2 col-md-10">
            <input type="submit" name="submit" value="See history" class="btn btn-default"/>          
        </div>
    </div>
}




