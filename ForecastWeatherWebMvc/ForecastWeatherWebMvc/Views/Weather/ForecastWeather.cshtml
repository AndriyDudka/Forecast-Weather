@model ForecastWeatherLibrary.DTO.Forecast

@{
    ViewBag.Title = "ForecastWeather";
}


@if (@Model.cnt == 1)
{
    <h2>Forecast Weather for 1 day</h2>
}
else
{
    <h2>Forecast Weather for @Model.cnt days</h2>
}



<div>
    <p>
        <label>Country: </label> @Model.City.Country
        <br />
        <label>City: </label> @Model.City.Name
    </p>
    
</div>



<div>
    @for(int i = 1; i <= Model.cnt; i++)
    {
        <p>DAY @i</p>
        <p>
            <label>Temperature</label>
            <br/>
            <label>Min: </label> @Model.List[i-1].Temp.Min
            <br/>
            <label>Max: </label> @Model.List[i-1].Temp.Max
            <br/>
            <label>Morning: </label> @Model.List[i-1].Temp.Morn
            <br/>
            <label>Day: </label> @Model.List[i-1].Temp.Day
            <br/>
            <label>Evening: </label> @Model.List[i-1].Temp.Eve
            <br/>
            <label>Nigth: </label> @Model.List[i-1].Temp.Night

        </p>

        <p>
            <label>Main weather:</label> @Model.List[i-1].Weather[0].ShortDescription
            <br/>
            <label>Description:</label> @Model.List[i-1].Weather[0].Description
        </p>

    }

</div>



